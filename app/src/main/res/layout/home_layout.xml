<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <!-- Scrollable content. Nos permite poder movernos de
    forma vertical dentro de la vitas. Gracias a este tipo de elemetos,
    se puede escrolear dentro de los layout o fragments-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- Nos permite almacenar el contenido escroleable dentro de la vista -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Título superior, con estilo propio definido-->
            <TextView
                android:id="@+id/tv_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Barra de búsqueda -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp">


                <LinearLayout
                    android:id="@+id/search_results_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/white"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:visibility="gone" />


            </androidx.cardview.widget.CardView>

            <!-- Sección de productos populares -->
            <ViewFlipper
                android:id="@+id/v_flipper"
                android:layout_width="match_parent"
                android:layout_height="260dp"></ViewFlipper>

            <TextView
                android:id="@+id/tv_tittle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Productos Populares"
                android:textSize="16sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Segmento de productos populares -->
                    <!-- Los ids son formados por el tipo de elemento
                        y en que zona están dentro de la plantilla por
                        ejemplo:
                            imageView = iv_xxx
                            textView = tv_xxx -->

                    <GridLayout
                        android:id="@+id/gridLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alignmentMode="alignMargins"
                        android:columnCount="4"
                        android:padding="16dp"
                        android:rowCount="2"
                        android:useDefaultMargins="true">

                        <!-- Botón 1 -->
                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/cardZanahoria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <FrameLayout
                                android:layout_width="90dp"
                                android:layout_height="100dp">

                                <!-- Image fills the entire card -->
                                <ImageView
                                    android:id="@+id/iv_pp_zanahoria"
                                    android:layout_width="90dp"
                                    android:layout_height="100dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/zanahoria" />

                                <!-- Text overlay on the image -->
                                <TextView
                                    android:id="@+id/tv_pp_zanahora"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:alpha="0.7"
                                    android:background="@android:color/darker_gray"
                                    android:padding="8dp"
                                    android:text="Zanahoria"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <!--Boton 2-->
                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/cardAcelga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <FrameLayout
                                android:layout_width="90dp"
                                android:layout_height="100dp">

                                <!-- Image fills the entire card -->
                                <ImageView
                                    android:id="@+id/iv_pp_acelga"
                                    android:layout_width="90dp"
                                    android:layout_height="100dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/acelga" />

                                <!-- Text overlay on the image -->
                                <TextView
                                    android:id="@+id/tv_pp_acelga"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:alpha="0.7"
                                    android:background="@android:color/darker_gray"
                                    android:padding="8dp"
                                    android:text="Acelga"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Botón 3 -->
                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/cardCebolla"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <FrameLayout
                                android:layout_width="90dp"
                                android:layout_height="100dp">

                                <!-- Image fills the entire card -->
                                <ImageView
                                    android:id="@+id/iv_pp_cebolla"
                                    android:layout_width="90dp"
                                    android:layout_height="100dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/cebolla" />

                                <!-- Text overlay on the image -->
                                <TextView
                                    android:id="@+id/tv_pp_cebolla"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:alpha="0.7"
                                    android:background="@android:color/darker_gray"
                                    android:padding="8dp"
                                    android:text="Cebolla"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Botón 4 -->
                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/cardLechuga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <FrameLayout
                                android:layout_width="90dp"
                                android:layout_height="100dp">

                                <!-- Image fills the entire card -->
                                <ImageView
                                    android:id="@+id/iv_pp_lechuga"
                                    android:layout_width="90dp"
                                    android:layout_height="100dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/lechuga_romana" />

                                <!-- Text overlay on the image -->
                                <TextView
                                    android:id="@+id/tv_pp_lechuga"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:alpha="0.7"
                                    android:background="@android:color/darker_gray"
                                    android:padding="8dp"
                                    android:text="Lechuga"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>


                    </GridLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Recomendaciones -->
            <TextView
                android:id="@+id/tv_tittle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Recomendaciones"
                android:textSize="16sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <!-- Producto Recomendado 1-->
                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cardJudia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <FrameLayout
                            android:layout_width="90dp"
                            android:layout_height="100dp">

                            <!-- Image fills the entire card -->
                            <ImageView
                                android:id="@+id/iv_r_judia"
                                android:layout_width="90dp"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/judia_verde" />

                            <!-- Text overlay on the image -->
                            <TextView
                                android:id="@+id/tv_r_judia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:alpha="0.7"
                                android:background="@android:color/darker_gray"
                                android:padding="8dp"
                                android:text="Judia Verde"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Producto Recomendado 2-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardCalabacin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <FrameLayout
                            android:layout_width="90dp"
                            android:layout_height="100dp">

                            <!-- Image fills the entire card -->
                            <ImageView
                                android:id="@+id/iv_r_calabacin"
                                android:layout_width="90dp"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/calabacin" />

                            <!-- Text overlay on the image -->
                            <TextView
                                android:id="@+id/tv_r_calabacin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:alpha="0.7"
                                android:background="@android:color/darker_gray"
                                android:padding="8dp"
                                android:text="Calabacín"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Producto Recomendado 3-->
                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cardPimiento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <FrameLayout
                            android:layout_width="90dp"
                            android:layout_height="100dp">

                            <!-- Image fills the entire card -->
                            <ImageView
                                android:id="@+id/iv_r_pimiento"
                                android:layout_width="90dp"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/pimiento_verde" />

                            <!-- Text overlay on the image -->
                            <TextView
                                android:id="@+id/tv_r_pimiento"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:alpha="0.7"
                                android:background="@android:color/darker_gray"
                                android:padding="8dp"
                                android:text="Pimiento Verde"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Producto Recomendado 4-->
                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cardNaranja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <FrameLayout
                            android:layout_width="90dp"
                            android:layout_height="100dp">

                            <!-- Image fills the entire card -->
                            <ImageView
                                android:id="@+id/iv_r_naranja"
                                android:layout_width="90dp"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/naranja_navel" />

                            <!-- Text overlay on the image -->
                            <TextView
                                android:id="@+id/tv_r_naranja"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:alpha="0.7"
                                android:background="@android:color/darker_gray"
                                android:padding="8dp"
                                android:text="Naranja Navel"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>
            <!-- Contenedor de tarjetas -->
            <LinearLayout
                android:id="@+id/scroll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp" />
        </LinearLayout>

    </ScrollView>





</androidx.coordinatorlayout.widget.CoordinatorLayout>
