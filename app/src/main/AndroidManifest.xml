<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos -->
    <uses-permission android:name="android.permission.INTERNET" tools:ignore="WrongManifestParent" />



    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icon1_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon1_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoonLightGarden"
        tools:targetApi="31">

        <!-- API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${ASTRONOMY_API_KEY}" />

        <!-- Actividad principal (AuthActivity) -->
        <activity
            android:name="login.AuthActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MoonLightGarden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- Registro -->
        <activity android:name="login.RegisterActivity"
            android:theme="@style/Theme.MoonLightGarden" />

        <!-- MainActivity con tu tema -->
        <activity
            android:name="com.example.moonlightgarden.MainActivity"
            android:theme="@style/Theme.MoonLightGarden" />
    </application>
</manifest>
