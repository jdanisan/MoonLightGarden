<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif"
        android:text="MoonLight Garden"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- CalendarView -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for Moon Phase -->
    <TextView
        android:id="@+id/moonPhaseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargando fase lunar..."
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for Select Date -->
    <TextView
        android:id="@+id/selectDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona una fecha"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewMoonPhase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ImageView for Moon Phase -->
    <ImageView
        android:id="@+id/imageViewMoonPhase"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/moonPhaseText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TableLayout for Products -->
    <TableLayout
        android:id="@+id/productTable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/selectDateText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Header Row -->
        <TableRow>
            <TextView
                android:text="PRODUCTO"
                android:textStyle="bold"
                android:padding="8dp" />
            <TextView
                android:text="DESCRIPCIÓN"
                android:textStyle="bold"
                android:padding="8dp" />
            <TextView
                android:text="PRECIO ACTUAL"
                android:textStyle="bold"
                android:padding="8dp" />
        </TableRow>

        <!-- Row 1 -->
        <TableRow>
            <ImageView
                android:src="@drawable/patata"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="4dp" />
            <TextView
                android:text="Brand\nSandía\nCantidad: 01"
                android:padding="8dp" />
            <TextView
                android:text="$10.99 /Kg"
                android:padding="8dp" />
        </TableRow>

        <!-- Row 2 -->
        <TableRow>
            <ImageView
                android:src="@drawable/patata"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="4dp" />
            <TextView
                android:text="Brand\nPera\nCantidad: 01"
                android:padding="8dp" />
            <TextView
                android:text="$8.99 /Kg"
                android:padding="8dp" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>